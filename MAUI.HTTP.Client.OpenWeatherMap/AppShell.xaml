<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.HTTP.Client.OpenWeatherMap.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.HTTP.Client.OpenWeatherMap"
    xmlns:view="clr-namespace:MAUI.HTTP.Client.OpenWeatherMap.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}" 
            Icon="icon_home" />
        
        <ShellContent
            Title="Weatherforecast"
            ContentTemplate="{DataTemplate view:WeatherMainPage}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate view:AboutPage}"
            Icon="icon_about" />
    
    </TabBar>

   

</Shell>
